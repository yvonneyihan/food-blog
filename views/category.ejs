<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= category %> Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/styles.css" />
</head>

<body>
  <%- include("header.ejs") %>

  <div class="container py-5">
    <!-- Category Title and Image -->
    <div class="text-center mb-5">
      <h1 class="mb-3"><%= category %></h1>
      <img src="/image/<%= category %>.jpg" alt="<%= category %>" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;">
    </div>

    <% if (posts.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 g-4">
        <% posts.forEach(function(post) { %>
        <div class="col">
            <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <!-- Image + Title + Metadata Row -->
                <div class="d-flex flex-row align-items-start gap-3 mb-3">
                <% if (post.image_url) { %>
                    <img src="<%= post.image_url %>" alt="Post image"
                        class="img-thumbnail"
                        style="width: 100px; height: 100px; object-fit: cover;">
                <% } %>
                <div>
                    <h5 class="card-title mb-1">
                    <%= post.title.length > 80 ? post.title.substring(0, 80) + "..." : post.title %>
                    </h5>
                    <p class="text-muted small mb-0">#<%= post.category %></p>
                    <p class="text-muted small">Last updated: <%= new Date(post.updated_at).toLocaleDateString() %></p>
                </div>
                </div>

                <!-- Post content aligned left -->
                <p class="card-text mb-4 text-start">
                <%= post.content.length > 200 ? post.content.substring(0, 200) + '...' : post.content %>
                </p>

                <!-- Read button aligned left at bottom -->
                <div class="mt-auto pt-2 text-start">
                <a href="/posts/read/<%= post.id %>" class="btn btn-sm btn-outline-primary">Read</a>
                </div>
            </div>
            </div>
        </div>
        <% }) %>
        </div>
        <% } else { %>
        <div class="text-center mt-5">
            <p class="fs-5 text-muted">No posts in this category yet.</p>
            <a href="/" class="btn btn-secondary mt-3">Return to Home</a>
        </div>
        <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
