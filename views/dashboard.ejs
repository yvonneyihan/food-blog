<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<%- include("header.ejs") %>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="header-text">Your Dashboard</h1>
      <a href="/posts/compose" class="btn btn-dark">+ New Post</a>
    </div>

    <% if (Object.keys(categoryPosts).length === 0) { %>
      <p class="text-muted">You haven't written any posts yet.</p>
    <% } else { %>
      <% for (const category in categoryPosts) { %>
        <h3 class="header-text mt-5 mb-3"><%= category %></h3>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% categoryPosts[category].forEach(post => { %>
            <div class="col">
              <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex flex-row align-items-start gap-3 mb-3">
                    <% if (post.image_url) { %>
                        <img src="<%= post.image_url %>" alt="Post image"
                            class="img-thumbnail"
                            style="width: 100px; height: 100px; object-fit: cover;">
                    <% } %>
                    <div>
                        <h5 class="card-title mb-1"><%= post.title.length > 40 ? post.title.substring(0, 40) + "..." : post.title %></h5>
                        <p class="text-muted small mb-0">#<%= post.category %></p>
                    </div>
                    </div>
                    <p class="card-text mb-4">
                    <%= post.content.length > 100 ? post.content.substring(0, 100) + "..." : post.content %>
                    </p>
                    <div class="d-flex flex-column">
                    <span class="text-muted small mt-auto">Views: <%= post.click_count %></span>
                    <span class="text-muted small">Last updated: <%= new Date(post.updated_at).toLocaleDateString() %></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <div class="d-flex gap-2">
                    <a href="/posts/read/<%= post.id %>" class="btn btn-sm btn-outline-primary">Read</a>
                    <a href="/posts/edit/<%= post.id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form action="/posts/delete/<%= post.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure?')">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                    </div>
                </div>
                </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
